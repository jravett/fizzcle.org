<style>
form label{
display: inline-block;
width: 100px;
font-weight: bold;
}
</style>

<h1> Edit Transaction </h1>

<%= form_for @tx do |form| %>
<p>
<fieldset>
  <label>Date:</label>
  <%= form.text_field :date %>
</p>
<p>  <label>Payee(friendly):</label>
<%= fields_for @tx.payee do |payee_fields| %>
  <%=payee_fields.text_field :friendly_name%>
  <% end %>
Originally: <i><%= @tx.payee.name %></i>
</p>

<p>
  <label>Amount:</label>
  <%= form.text_field :amount %>
</p>
<p>
  <label>Tag:</label>
  <%= form.text_field :tag_list %>
</p>
<%= form.submit "Submit"%>
<%= link_to "cancel", transactions_path %>
</fieldset>
<% end %>

